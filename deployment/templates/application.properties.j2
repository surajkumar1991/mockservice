server.servlet.context-path=/ubs-mock-services
server.port={{ service_port | default('8080') }}

server.tomcat.basedir={{ service_name }}
server.tomcat.accesslog.enabled=true
server.tomcat.accesslog.pattern=%t %a "%r" %s (%D ms)
server.tomcat.accesslog.suffix=.log
server.tomcat.accesslog.directory=access_logs
error.product.ids=1001,1002,1003
error.partner.ids=1001,1002,1003

logging.level.*=DEBUG
logging.config=classpath:log4j2-development.xml
logging.level.org.springframework=error
server.tomcat.accesslog.pubsub.push.enabled=false

spring.datasource.driver-class-name=com.mysql.jdbc.Driver
spring.datasource.url=jdbc:mysql://{{ database_instance }}:{{ database_port }}/{{ database_schema_name }}?useSSL=false
spring.datasource.username={{ database_username }}
spring.datasource.password={{ database_password }}

